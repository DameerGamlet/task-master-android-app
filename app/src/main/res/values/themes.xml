        <item name="colorPrimary">@color/nord_10</item>
        <item name="colorPrimaryVariant">@color/nord_9</item>
        <item name="colorOnPrimary">@color/nord_6</item>
        <!-- Вторичный цвет бренда. -->
        <item name="colorSecondary">@color/nord_8</item>
